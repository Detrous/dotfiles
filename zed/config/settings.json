// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
      "diagnostics": false,
      "metrics": false
  },
  "format_on_save": "off",
  "icon_theme": "Catppuccin Mocha",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-latest"
    },
    "version": "2"
  },
  "base_keymap": "JetBrains",
  "vim_mode": false,
  "relative_line_numbers": true,
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark Hard",
    "dark": "Ayu Dark"
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python",
          "venvPath": ".",
          "venv": ".venv"
        },
        "basedpyright.analysis": {
          "diagnosticMode": "openFilesOnly",
          "extraPaths": [".", "src", "tests", "tests/test_api","tests_e2e", "src/ai_product_parser_watchdog"],
          "inlayHints": {
            "callArgumentNames": false,
            "autoSearchPaths": true
          }
        }
      }
    },
    "kotlin-lsp": {
      "binary": {
        "path": "/Users/detrous/.kotlin-lsp/kotlin-lsp.sh",
        "arguments": ["--stdio"]
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "!pyright", "claude-code-server"]
    },
    "Kotlin": {
      "language_servers": ["claude-code-server", "kotlin-lsp"]
    }
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".venv"],
        "activate_script": "default"
      }
    },
    "env": {
      "VIRTUAL_ENV": ".venv",
      "PATH": ".venv/bin:$PATH",
      "PYTHONPATH": "${PYTHONPATH}:./src"
    }
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  }
}
